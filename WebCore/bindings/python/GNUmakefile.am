	$(PERL) -I$(WebCore)/bindings/scripts $< --bindingType Python --tags $(WebCore)/html/HTMLTagNames.in --attrs $(WebCore)/html/HTMLAttributeNames.in --wrapperFactory --outputDir "$(GENSOURCES)"
endif # HTML_FLAGS

DerivedSources/WebCore/PythonHTMLElementWrapperFactory.cpp: DerivedSources/WebCore/HTMLNames.cpp;

DerivedSources/python/PyWebkit.cpp: codegen/codegen.py codegen/xpidl.py \
				codegen/argtypes.py $(srcdir)/codegen/_pywebkit.override \
				$(srcdir)/codegen/idl_files.txt \
				$(shell cat $(srcdir)/codegen/idl_files.txt)
	mkdir -p $(GENSOURCES)/python
	$(PYTHON) codegen/xpidl.py \
                $(srcdir)/codegen/_pywebkit.override \
                $(shell cat $(srcdir)/codegen/idl_files.txt)

DerivedSources/python/webkit.defs.c: DerivedSources/python/webkit.defs \
								$(pysrcdir)/webkit/webkit.override
	mkdir -p $(GENSOURCES)/python
	($(PYGOBJECT_CODEGEN) \
            --register $(PYGTK_DEFSDIR)/gdk-types.defs \
            --register $(PYGTK_DEFSDIR)/gtk-types.defs \
			--override pywebkitgtk/webkit/webkit.override \
			--prefix pywebkit DerivedSources/python/webkit.defs) 2>&1 > \
			         $(*D)/gen-$(*F).c | tee $(*D)/$(*F).errors \
    && cp $(*D)/gen-$(*F).c DerivedSources/python/webkit.c \
    && rm -f $(*D)/gen-$(*F).c

DerivedSources/python/webkit.c: $(pywebkit_defs) \
    DerivedSources/python/webkit.defs \
    DerivedSources/python/webkit.defs.c \
	$(pysrcdir)/webkit/webkit.override;


